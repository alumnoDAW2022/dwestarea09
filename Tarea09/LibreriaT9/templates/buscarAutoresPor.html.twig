{% extends "base.html.twig" %}

{% block title %}Buscar libros

{% endblock %}

{% block stylesheets %}
	<style>
		{{source('publico/css/buscar-libros.css',  ignore_missing = true)}}</style>
{% endblock %}


{% block main %}


	<div>
		<h1>Buscar Autores</h1>
	</div>
	<section>
		<div>
			<form id="formulario" autocomplete="off">
				<label for="textoBuscar">Escribe el nombre de un autor a buscar</label>
				<p><input type="text" name="textoBuscar" id="textoBuscar" placeholder="Autor...." required></p>
				<span id="mostrarMensaje"></span>

				<p><input type="button" id="buscar" value="buscar"></p>
			</form>

		</div>

		<div id="resultado"></div>
	</section>


	{% block javascripts %}

		<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>


		<script>{{ source('publico/js/js-buscar-XXXXX.js', ignore_missing = true) }}</script>


	{% endblock %}

{% endblock %}
